<!doctype html>
<html class="no-js" lang="pt-BR">
    <head>
        <title>Carrinho - Adoorei</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" >
        <meta name="viewport" content="width=device-width,user-scalable=yes">
    </head>
    <body>
        <div class="container">
            <!-- @include _header.kit -->
            <main class="main">                
                <section class="cart_full">
                    <form action="/" id="CartUpdateForm" method="post">  
                        <table>
                                <thead>
                                    <tr>
                                        <th colspan="2">Produto</th>
                                        <th>Preço Unitário</th>
                                        <th>Quantidade</th>
                                        <th>Subtotal</th>
                                        <th>Excluir</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><img src="" alt="" title="" class="cart_thumb"></td>
                                        <td>Titulo do Produto <br> Categoria do produto</td>
                                        <td>R$ 10,00</td>
                                        <td><input type="number" value="2" name="cart_quantity" min="1" max="5" required="required"></td>
                                        <td>R$ 20,00</td>
                                        <td><i class="fa fa-trash"></i></td>                           
                                    </tr>                        
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="5">Total</td>
                                        <td>R$ 20,00</td>
                                    </tr>
                                </tfoot>  
                        </table>
                   </form>
                </section>

                <section class="cart_empty">
                </section>
            </main>
            <!-- @include _footer.kit -->
        </div>
    </body>
</html>